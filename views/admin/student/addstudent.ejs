<%-include('../layouts/header.ejs')%>

  <%-include('../layouts/sidebar.ejs')%>
  

    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">

      <!-- Main content -->
      <div class="content">

        <!-- /.card -->

        <div class="card">
          <div class="card-header d-flex justify-content-between">
            <h3 class="card-title" style="line-height: 40px;"> Display student</h3>
            <button type="button" class="btn btn-info ml-auto" data-toggle="modal" data-target="#addstudent">
             Add student
            </button> 
          </div>
          <!-- /.card-header -->
          <div class="card-body">
            <% if(msg.length>0){%>
              <div class="alert alert-success">
                <%= msg %>
              </div>
            <% } %>
            <table id="example1" class="table table-bordered table-striped">
              <thead>
                <tr>
                  <th>S.No</th>
                  <th>Name</th>
                  <th>Email</th>
                  <th>course</th>
                  <th>Image</th>
                  <th>Action</th>
                </tr>
              </thead>
              <tbody>
                <% i=1 %>
                <% d.forEach((item)=>{ %>
                  <tr>
                    <td><%= i++ %></td>
                    <td><%= item.name %></td>
                    <td><%= item.email %></td>
                    <td><%= item.course %></td>
                    <td>
                      <img src="<%= item.image.url %>" alt="" width="50" style="border-radius: 20px;">
                    </td>
                    <td>
                      <a href="/admin/studentview/<%= item._id %>" class="btn btn-info">view</a>
                      <a href="/admin/studentedit/<%= item._id %>" class="btn btn-success">Edit</a>
                      <a href="/admin/studentdelete/<%= item._id %>" class="btn btn-danger">delete</a>
                    </td>
                  </tr>
               <% }) %>
                
              </tbody>
              <tfoot>
                <tr>
                  <th>S.No</th>
                  <th>Name</th>
                  <th>Email</th>
                  <th>course</th>
                  <th>Image</th>
                  <th>Action</th>
                </tr>
              </tfoot>
            </table>
          </div>
          <!-- /.card-body -->
        </div>
        <!--modal start-->
        <div class="modal fade" id="addstudent">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <h4 class="modal-title">Add student</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
              <div class="modal-body">
                <form action="/studentinsert" method="post" enctype="multipart/form-data" required>
                  <div class="form-group">
                    <label>Name</label>
                    <input type="text" name="name" class="form-control" required>
                  </div>
                  <div class="form-group">
                    <label>Email</label>
                    <input type="text" name="email" class="form-control" required>
                  </div>
                  <div class="form-group">
                    <label>Password</label>
                    <input type="password" name="password" class="form-control" required>
                  </div>
                  <div class="form-group">
                    <label>course</label>
                    <select name="course" id="" class="form-control">
                      <option>select course</option>
                      <% c.forEach((item)=>{%>
                        <option value="<%=item.cname %>"><%= item.cname %></option>
                      <%})%>
                    </select>
                  </div>
                  <div class="form-group">
                    <label>Image</label>
                    <input type="file" name="image" class="form-control" required>
                  </div>
                  <button type="submit" class="btn btn-success">submit</button>
                </form>
              </div>
            </div>
            <!-- /.modal-content -->
          </div>
          <!-- /.modal-dialog -->
        </div>
        <!--modal end -->

        <!-- /.card -->
      </div>
      <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->


    <%-include('../layouts/footer.ejs')%>