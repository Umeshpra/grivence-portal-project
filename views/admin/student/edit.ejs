<%-include('../layouts/header.ejs') %>

  <%-include('../layouts/sidebar.ejs') %>


    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">

      <!-- Main content -->
      <div class="content">

        <!-- /.card -->

        <div class="card">
          <div class="card-header d-flex justify-content-between">
            <h3 class="card-title" style="line-height: 40px;"> Edit student</h3>
          </div>
          <!-- /.card-header -->
          <div class="card-body">
            <!--modal start-->
                  <form action="/admin/studentupdate/<%= d._id %>" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                      <label>Name</label>
                      <input type="text" value="<%= d.name %>" name="name" class="form-control" required>
                    </div>
                    <div class="form-group">
                      <label>Email</label>
                      <input type="text" value="<%= d.email %>" name="email" class="form-control" required>
                    </div>
                    <div class="form-group">
                      <label>course</label>
                      <input type="text" value="<%= d.course %>" name="course" class="form-control" required>
                    </div>
                    <div class="form-group">
                      <label>Password</label>
                      <input readonly type="password" value="<%= d.password %>" name="password" class="form-control" required>
                    </div>
                    <div class="form-group">
                      <label>Image</label>
                      <input type="file" name="image" class="form-control" required>
                    </div>
                    <br>
                    <img src="<%= d.image.url %>" alt="" width="50" style="border-radius: 20px;">
                    <button type="submit" class="btn btn-success">update</button>
                  </form>

          </div>
          <!-- /.card-body -->
        </div>
        <!--modal start-->
        <!--modal end -->

        <!-- /.card -->
      </div>
      <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->


    <%-include('../layouts/footer.ejs') %>