<%-include('../admin/layouts/header.ejs') %>

  <%-include('../admin/layouts/sidebar.ejs') %>


    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">

      <!-- Main content -->
      <div class="content">

        <!-- /.card -->

        <div class="card">
          <div class="card-header d-flex justify-content-between">
            <h3 class="card-title" style="line-height: 40px;"> Edit complaint</h3>
          </div>
          <!-- /.card-header -->
          <div class="card-body">
            <!--modal start-->
                  <form action="/complaintupdate/<%= c._id %>" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                      <label>Complaint type</label>
                      <input type="text" value="<%= c.ctype %>" name="ctype" class="form-control" required>
                    </div>
                    <div class="form-group">
                      <label>semester</label>
                      <select  type="text" class="form-control" name="semester" required>
                        <option value="<% c.semester %>" >select semester</option>
                        <option >1st semester</option>
                        <option>2nd semester</option>
                        <option>3rd semester</option>
                        <option>4th semester</option>
                        <option>5th semester</option>
                      </select>
                      <!-- <input type="text" value="<%= c.semester %>" name="semester" class="form-control" required> -->
                    </div>
                    <div class="form-group">
                      <label>subject</label>
                      <input type="text" value="<%= c.subject %>" name="subject" class="form-control" required>
                    </div>
                    <div class="form-group">
                      <label>Complaint detail</label>
                      <input type="text" value="<%= c.cdetail %>" name="cdetail" class="form-control" required>
                    </div>
                    <br>
                    <div class="form-group">
                        <label>image</label>
                        <input type="file" name="image" class="form-control" required>
                    </div>
                    <img src="<%= c.image.url %>" alt="" width="50" style="border-radius: 20px;">
                    <button type="submit" class="btn btn-success">update</button>
                  </form>

          </div>
          <!-- /.card-body -->
        </div>
        <!--modal start-->
        <!--modal end -->

        <!-- /.card -->
      </div>
      <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->


    <%-include('../admin/layouts/footer.ejs') %>