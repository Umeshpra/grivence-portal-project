<%-include('../admin/layouts/header.ejs') %>

    <%-include('../admin/layouts/sidebar.ejs') %>


        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">

            <!-- Main content -->
            <div class="content">

                <!-- /.card -->

                <div class="card">
                    <div class="card-header d-flex justify-content-between">
                        <h3 class="card-title" style="line-height: 40px;"> Display complaint</h3>
                        <button type="button" class="btn btn-info ml-auto" data-toggle="modal"
                            data-target="#addcomplaint">
                            Add complaint
                        </button>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <table id="example1" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>S.No</th>
                                    <th>complaint type</th>
                                    <th>status</th>
                                    <th>comment</th>
                                    <th>action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% i=1 %>
                                <% c.forEach((item)=>{%>
                                    <tr>
                                        <td>
                                            <%= i++ %>
                                        </td>
                                        <td>
                                            <%= item.ctype %>
                                        </td>
                                        <td>
                                            <%= item.status %>
                                        </td>
                                        <td>
                                           <textarea name="" id="" > <%= item.comment %></textarea> 
                                        </td>
                                
                                        <td>
                                            <img src="<%= item.image.url %>" alt="" width="50"
                                                style="border-radius: 20px;">
                                        </td>
                                        <td>
                                            <a href="/complaint/complaintview/<%= item._id %>" class="btn btn-info">view</a>
                                            <a href="/complaint/complaintedit/<%= item._id %>"class="btn btn-success">Edit</a>
                                            <a href="/complaint/complaintdelete/<%= item._id %>"class="btn btn-danger">delete</a>
                                        </td>
                                    </tr>
                                <%})%>
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>S.No</th>
                                    <th>complaint type</th>
                                    <th>status</th>
                                    <th>comment</th>
                                    <th>action</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!--modal start-->
                <div class="modal fade" id="addcomplaint">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h4 class="modal-title">Add complaint</h4>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">

                                <form action="/complaintinsert" method="post" enctype="multipart/form-data">
                                    <div class="form-group">
                                        <label>Complaint Type</label>
                                        <input type="text" name="ctype" class="form-control" required>
                                    </div>
                                    <div class="form-group">
                                        <label>Semester</label>
                                        <select name="semester" id="" class="form-control">
                                            <option>Select Semester</option>
                                            <option>1st Semester</option>
                                            <option>2nd Semester</option>
                                            <option>3rd Semester</option>
                                            <option>4th Semester</option>
                                            <option>5th Semester</option>
                                            <option>6th Semester</option>
                                        </select>
                                    </div>
                                    <div class="form-group">
                                        <label>Subject</label>
                                        <input type="text" name="subject" class="form-control" required>
                                    </div>
                                    <div class="form-group">
                                        <label>Complaint Details</label>
                                        <textarea name="cdetail" id="" class="form-control" required></textarea>
                                    </div>
                                    <div class="form-group">
                                        <label>Attach Supporting Files</label>
                                        <input type="file" name="image" class="form-control" required>
                                    </div>
                                    <button type="submit" class="btn btn-success">add complaint</button>
                                </form>
                            </div>
                        </div>
                        <!-- /.modal-content -->
                    </div>
                    <!-- /.modal-dialog -->
                </div>
                <!--modal end -->
                <!-- /.card -->
            </div>
            <!-- /.content -->
        </div>
        <!-- /.content-wrapper -->

        <%-include('../admin/layouts/footer.ejs') %>